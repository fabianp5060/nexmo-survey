<center>
  <h3>Dial <%= $did %> to start the Demo</h3>
  <p>After completing the survey, refresh the webpage to see the results</p>
</center>
<div class="Vlt-table" align="center">
  <table>
    <thead>  
      <tr>
        <th>Phone Number</th>
        <th>Question 1</th>
        <th>Question 2</th>
        <th>Question 3</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |caller| %>
      <tr>
        <td><%=caller.attributes[:phone_number]%></td>
        <td><%=caller.attributes[:question_1]%></td>
        <td><%=caller.attributes[:question_2]%></td>
        <td><%=caller.attributes[:question_3]%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>